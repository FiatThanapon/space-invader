<Player>:
    canvas:
        Rectangle:
            size: self.size
            source: 'image/player.png'
            pos: self.pos

<Bullet>
    canvas:
        Rectangle:
            source:'image/green_laser.png'
            size:self.size
            pos:self.pos

<Life>
    canvas:
        Rectangle:
            source:'image/fullheart.png'
            size:self.size
            pos:self.pos

<Alien>
    canvas:
        Rectangle:
            source:'image/alien_ship.png'
            size:self.size
            pos: self.pos

<Alien_bullet>
    canvas:
        Rectangle:
            source:'image/red_laser.png'
            size:self.size
            pos:self.pos

<Game>:
    player: my_ship
    my_label: lives_label

    canvas:
        Rectangle:
            source: 'image/background.png'
            size: self.width, self.height
            pos: self.pos

    Player:
        id: my_ship
        pos: root.width/2 - self.size[0]/2, root.height * 0.1

    Label:
        id: lives_label
        text: 'LIVES:'
        font_name: "font/starwars_font"
        color: 255/255, 232/255, 31/255, 1
        size: self.texture_size
        pos: root.width - self.size[0] - (3 * root.width/15) - (3 * root.width/30) - (root.width/120), root.height - self.size[1] - (root.width/120)
        canvas.before:
            Color:
                rgba: (0, 0, 0, 0)
            Rectangle:
                size: self.size
                pos: self.pos

<PlayScreen>:
    name:'Play'
    Game:
        id:my_game

<LossScreen>:
    name:'Loss'
    canvas:
        Rectangle:
            source:'image/background.png'
            size:self.size
            pos:self.pos

    Label:
        size:self.texture_size
        font_name:"font/starwars_font"
        color:255/255, 232/255, 31/255, 1
        text:"DEFEAT"
        pos_hint:{'center_x':0.5,'center_y':0.75}

    Button:
        text:"RESET"
        id:random_button
        background_normal: ""
        background_color: (255/255, 232/255, 31/255, 1)
        font_size:root.width/16
        font_name:"font/starwars_font"
        color:(0,0,0,1)
        pos_hint:{'center_x':0.5,'center_y':0.5}
        size_hint:0.5,0.1
        on_press:root.game_reset()

    Button:
        text:"QUIT"
        background_normal: ""
        background_color: (255/255, 232/255, 31/255, 1)
        font_size:root.width/16
        font_name:"font/starwars_font"
        color:(0,0,0,1)
        pos_hint:{'center_x':0.5,'center_y':0.25}
        size_hint:0.5,0.1
        on_press:app.stop()

<WinScreen>:
    name:'Win'
    canvas:
        Rectangle:
            source:'image/background.png'
            size:self.size
            pos:self.pos

    Label:
        font_size:root.width/8
        font_name:"font/starwars_font"
        color:(255/255, 232/255, 31/255, 1)
        text:"VICTORY"
        pos_hint:{'center_x':0.5,'center_y':0.75}

    Button:
        text:"RESET"
        background_normal: ""
        background_color: (255/255, 232/255, 31/255, 1)
        font_size:root.width/16
        font_name:"font/starwars_font"
        color:(0,0,0,1)
        pos_hint:{'center_x':0.5,'center_y':0.5}
        size_hint:0.5,0.1
        on_press:root.game_reset()

    Button:
        text:"QUIT"
        background_normal: ""
        background_color: (255/255, 232/255, 31/255, 1)
        font_size:root.width/16
        font_name:"font/starwars_font"
        color:(0,0,0,1)
        pos_hint:{'center_x':0.5,'center_y':0.25}
        size_hint:0.5,0.1
        on_press:app.stop()